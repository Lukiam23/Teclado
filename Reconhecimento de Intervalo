    e[6].oitava=1;
    e[6].frequencia=183;
    
    strcpy(e[7].nome,"Sol");
    e[7].oitava=1;
    e[7].frequencia=198;
    
    strcpy(e[8].nome,"Sol#/Lab");
    e[8].oitava=1;
    e[8].frequencia=206;
    
    strcpy(e[9].nome,"La");
    e[9].oitava=1;
    e[9].frequencia=220;
    
    strcpy(e[10].nome,"La#/Sib");
    e[10].oitava=1;
    e[10].frequencia=229;
    
    strcpy(e[11].nome,"Si");
    e[11].oitava=1;
    e[11].frequencia=247;

	FILE *fp, *fopen();
	
	fp = fopen("ode.txt","r");
	
	char nomeNota[7];
	int oitava;
	int tempoN;
	int posicao_aleatoria, intervalo;
	int t = 500;
	int escolha;
	float semitons;
	escolha=0;
	
	struct intervalo intervalos[10];
	addinter("2M",intervalos,1.0,0);
	addinter("2m",intervalos,0.5,1);
	addinter("3M",intervalos,2.0,2);
	addinter("3m",intervalos,1.5,3);
	addinter("4J",intervalos,2.5,4);
	addinter("5J",intervalos,3.5,5);
